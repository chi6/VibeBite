/**index.wxss**/
page {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  margin: 0;
  padding: 0;
}

.container {
  min-height: 100vh;
  background: #f8f9fd;
}

/* 顶部区域 */
.header {
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.welcome-text {
  color: #fff;
}

.welcome-text .title {
  font-size: 48rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 16rpx;
}

.welcome-text .subtitle {
  font-size: 32rpx;
  opacity: 0.9;
}

/* AI状态区域 */
.status-section {
  margin: -30rpx 30rpx 30rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.ai-status {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ai-animation {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(110, 142, 251, 0.1);
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.status-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.status-item {
  font-size: 26rpx;
  color: #666;
  background: rgba(110, 142, 251, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* 导航区域 */
.nav-container {
  margin: 30rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.nav-group {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background: rgba(110, 142, 251, 0.05);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.nav-item:active {
  transform: scale(0.95);
}

.nav-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.nav-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 快捷对话入口 */
.chat-section {
  margin: 0 30rpx 30rpx;
}

.chat-btn {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #6e8efb, #7b7fec);
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(110, 142, 251, 0.2);
  border: none;
}

.chat-btn:active {
  transform: scale(0.98);
}

.ai-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.btn-text {
  flex: 1;
  text-align: left;
}

.btn-title {
  display: block;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.btn-desc {
  display: block;
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
}

/* 最近活动区域 */
.recent-activity {
  margin: 30rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 20rpx;
}

.title-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(to right, rgba(110, 142, 251, 0.3), transparent);
}

.activity-list {
  max-height: 600rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: rgba(110, 142, 251, 0.05);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.activity-item:active {
  transform: scale(0.98);
}

.activity-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.activity-info {
  flex: 1;
}

.activity-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.activity-time {
  font-size: 24rpx;
  color: #999;
}

/* 餐饮喜好区域 */
.preferences-section {
  margin: 30rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.preferences-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.preferences-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.preferences-item {
  font-size: 26rpx;
  color: #666;
  background: rgba(110, 142, 251, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}
