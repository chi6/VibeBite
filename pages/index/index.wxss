/**index.wxss**/
page {
  background: #f5f6f8;
  min-height: 100vh;
}

.container {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.notebook-container {
  width: 600rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* Notebook 通用样式 */
.notebook-section {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
  position: relative;
}

.notebook-section::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 4rpx;
  height: 100%;
  background: #e8eaf1;
  border-radius: 4rpx;
}

/* AI对话区域 */
.chat-section {
  background: #f8f9ff;
  border: 1px solid #e8eaf1;
}

.paper-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.ai-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #ffffff;
  border: 4rpx solid #e8eaf1;
}

.chat-info {
  flex: 1;
}

.chat-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.chat-subtitle {
  font-size: 24rpx;
  color: #666;
}

.chat-btn {
  background: transparent;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.chat-btn::after {
  display: none;
}

.btn-icon {
  font-size: 40rpx;
}

/* 主要内容区域 */
.main-section {
  background: #ffffff;
}

.paper-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1px dashed #e8eaf1;
  margin-bottom: 24rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.date-text {
  font-size: 24rpx;
  color: #999;
}

/* 分类样式 */
.category-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.category-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.category-icon {
  font-size: 32rpx;
}

.category-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.add-btn {
  margin-left: auto;
  padding: 8rpx;
}

/* 笔记项目样式 */
.note-item {
  margin-bottom: 16rpx;
}

.note-content {
  background: #f8f9ff;
  border-radius: 16rpx;
  padding: 20rpx;
  position: relative;
}

.note-content.editable {
  cursor: pointer;
}

.note-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.note-actions {
  display: flex;
  gap: 16rpx;
  position: absolute;
  right: 16rpx;
  top: 16rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.note-content:hover .note-actions {
  opacity: 1;
}

.action-icon {
  font-size: 24rpx;
  color: #999;
}

/* 标签样式 */
.note-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 12rpx;
}

.tag {
  font-size: 22rpx;
  color: #666;
  background: #ffffff;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  border: 1px solid #e8eaf1;
}

/* 编辑模式 */
.edit-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 100;
}

.edit-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  z-index: 101;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
}

.edit-textarea {
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.edit-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 16rpx;
}

.cancel-btn, .save-btn {
  font-size: 28rpx;
  padding: 8rpx 24rpx;
}

.cancel-btn {
  color: #999;
}

.save-btn {
  color: #4a90e2;
  font-weight: 500;
}

/* 适配小屏幕 */
@media screen and (max-width: 700rpx) {
  .notebook-container {
    width: 85vw;
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  page {
    background: #1a1a1a;
  }

  .notebook-section {
    background: #2a2a2a;
    border-color: #333;
  }

  .notebook-section::before {
    background: #333;
  }

  .chat-section {
    background: #2a2a2a;
  }

  .chat-title {
    color: #fff;
  }

  .chat-subtitle {
    color: #999;
  }

  .title-text {
    color: #fff;
  }

  .category-title {
    color: #fff;
  }

  .note-content {
    background: #333;
  }

  .note-text {
    color: #fff;
  }

  .tag {
    background: #333;
    border-color: #444;
    color: #999;
  }

  .edit-wrapper {
    background: #2a2a2a;
  }

  .edit-textarea {
    color: #fff;
  }
}

/* 标签页容器 */
.tabs-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tab-list {
  display: flex;
  flex-wrap: nowrap;
  gap: 16rpx;
  overflow-x: auto;
  padding: 8rpx 0;
  margin: 0 -24rpx;
  padding: 0 24rpx;
}

.tab-list::-webkit-scrollbar {
  display: none;
}

.tab {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: #f5f6f8;
  border-radius: 24rpx;
  transition: all 0.3s ease;
  white-space: nowrap;
  border: 1px solid #e8eaf1;
}

.tab.active {
  background: #ffffff;
  border-color: #4a90e2;
  color: #4a90e2;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.1);
}

.tab-icon {
  font-size: 32rpx;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 便签内容区域 */
.notes-container {
  position: relative;
  min-height: 200rpx;
}

.note-list {
  display: none;
  flex-direction: column;
  gap: 16rpx;
  animation: fadeIn 0.3s ease;
}

.note-list.show {
  display: flex;
}

.note-item {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  border: 1px solid #e8eaf1;
}

.note-content {
  padding: 20rpx;
  position: relative;
}

.note-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 12rpx;
}

.note-actions {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  gap: 12rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.note-item:hover .note-actions {
  opacity: 1;
}

.action-btn {
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  font-size: 24rpx;
}

/* 添加按钮 */
.add-note {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  background: #f8f9ff;
  border: 2rpx dashed #e8eaf1;
  border-radius: 16rpx;
  color: #666;
  transition: all 0.3s ease;
}

.add-note:active {
  background: #f0f2f5;
}

.add-icon {
  font-size: 32rpx;
}

.add-text {
  font-size: 28rpx;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .tab {
    background: #2a2a2a;
    border-color: #333;
  }

  .tab.active {
    background: #333;
    border-color: #4a90e2;
  }

  .note-item {
    background: #2a2a2a;
    border-color: #333;
  }

  .note-text {
    color: #fff;
  }

  .action-btn {
    background: rgba(45, 45, 45, 0.9);
  }

  .add-note {
    background: #2a2a2a;
    border-color: #333;
    color: #999;
  }

  .add-note:active {
    background: #333;
  }
}
