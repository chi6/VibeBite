/**index.wxss**/
page {
  background: linear-gradient(135deg, #f6f9fc, #edf1f7);
}

.container {
  min-height: 100vh;
  padding: 30rpx 0;
}

.main-content {
  padding: 0 30rpx;
}

/* AI状态卡片 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.ai-status-card {
  background: linear-gradient(145deg, #7F7FD5, #91EAE4);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 32rpx rgba(127, 127, 213, 0.2);
}

.ai-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.ai-animation {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  background: rgba(255, 255, 255, 0.1);
  padding: 4rpx;
}

.ai-title {
  flex: 1;
}

.ai-title .title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  display: block;
  margin-bottom: 8rpx;
}

.ai-title .subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.status-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.status-tag {
  font-size: 24rpx;
  color: #fff;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

.ai-thought {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.6;
}

/* 餐饮喜好卡片 */
.preferences-card {
  background: #fff;
  border: 1px solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  margin-bottom: 20rpx;
}

.card-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.preferences-content {
  padding: 0;
  background: transparent;
}

.pref-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.pref-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pref-text {
  flex: 1;
}

.pref-label {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 4rpx;
}

.pref-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.pref-recommend {
  margin-top: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 20rpx;
}

.recommend-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.recommend-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.recommend-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.recommend-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 对话按钮 */
.chat-btn {
  width: 100% !important;
  padding: 0;
  border: none;
  margin-top: 20rpx;
}

.gradient-bg {
  background: linear-gradient(135deg, #6a11cb, #2575fc);
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(42, 117, 252, 0.2);
}

.chat-btn-content {
  display: flex;
  align-items: center;
  padding: 30rpx;
  gap: 20rpx;
}

.ai-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 10rpx;
}

.btn-text {
  flex: 1;
  text-align: left;
}

.btn-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.btn-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}

/* 动画效果 */
.chat-btn {
  transition: transform 0.2s ease;
}

.chat-btn:active {
  transform: scale(0.98);
}

/* 适配暗黑模式 */
@media (prefers-color-scheme: dark) {
  page {
    background: linear-gradient(135deg, #1a1a1a, #2a2a2a);
  }
  
  .ai-status-card {
    background: linear-gradient(145deg, #4a4a8f, #4a8f8f);
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  .preferences-card {
    background: #2a2a2a;
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  .recommendation-category {
    background: linear-gradient(145deg, #2a2a2a, #333);
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  .recommendation-item {
    background: linear-gradient(145deg, rgba(45, 45, 45, 0.9), rgba(40, 40, 40, 0.7));
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  .chat-btn.gradient-bg {
    background: linear-gradient(135deg, #4a4a8f, #4a8f8f);
  }
  
  .add-btn {
    background: linear-gradient(135deg, #4a8f8f, #4a4a8f);
  }
}

/* 在现有样式基础上添加或更新以下样式 */
.features-section, .recommendations-section {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  background: rgba(255, 255, 255, 0.9);
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.features-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.recommendations-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recommendation-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.recommendation-number {
  background: #7F7FD5;
  color: #fff;
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  flex-shrink: 0;
}

.recommendation-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  flex: 1;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .features-section, .recommendations-section {
    background: rgba(255, 255, 255, 0.1);
  }

  .section-title {
    color: #fff;
  }

  .features-text, .recommendation-text {
    color: #ccc;
  }

  .section-icon {
    background: rgba(255, 255, 255, 0.15);
  }
}

/* 更新推荐卡片相关样式 */
.recommendation-category {
  background: linear-gradient(145deg, #ffffff, #f8f9fa);
  border: 1px solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.category-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.06);
}

.category-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  background: linear-gradient(135deg, #fff, rgba(255, 255, 255, 0.9));
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 1px solid rgba(255, 255, 255, 0.8);
}

.category-title {
  flex: 1;
  margin: 0 16rpx;
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.recommendation-items {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.recommendation-item {
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.7));
  border: 1px solid rgba(255, 255, 255, 0.6);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  transition: transform 0.2s ease;
  width: 100%;
  box-sizing: border-box;
}

.recommendation-item:active {
  transform: scale(0.98);
}

.item-header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 0;
  width: 100%;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  z-index: 1;
}

.item-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.rich-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  width: 100%;
  box-sizing: border-box;
  padding-right: 40rpx;
}

.highlight {
  color: #2575fc;
  font-weight: 500;
  padding: 0 4rpx;
}

.highlight-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 8rpx;
}

.highlight-tag {
  font-size: 24rpx;
  color: #2575fc;
  background: rgba(37, 117, 252, 0.08);
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(37, 117, 252, 0.2);
  box-shadow: 0 2rpx 4rpx rgba(37, 117, 252, 0.1);
}

/* 暗黑模式适配优化 */
@media (prefers-color-scheme: dark) {
  .recommendation-category {
    background: linear-gradient(145deg, rgba(40, 40, 40, 0.9), rgba(30, 30, 30, 0.7));
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  .recommendation-item {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .category-icon {
    background: linear-gradient(135deg, rgba(60, 60, 60, 0.9), rgba(50, 50, 50, 0.9));
    border-color: rgba(255, 255, 255, 0.2);
  }

  .category-title, .item-title {
    color: #fff;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  .rich-content {
    color: rgba(255, 255, 255, 0.8);
  }

  .highlight {
    color: #86a8e7;
  }
  
  .highlight-tag {
    color: #86a8e7;
    background: rgba(134, 168, 231, 0.15);
    border-color: rgba(134, 168, 231, 0.3);
  }

  .category-header {
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
}

/* 添加滚动阴影效果 */
.preferences-content {
  position: relative;
  overflow: hidden;
}

.preferences-content::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  background: linear-gradient(to top, rgba(245, 247, 250, 1), rgba(245, 247, 250, 0));
  pointer-events: none;
}

@media (prefers-color-scheme: dark) {
  .preferences-content::after {
    background: linear-gradient(to top, rgba(26, 26, 26, 1), rgba(26, 26, 26, 0));
  }
}

/* 添加编辑相关样式 */
.header-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.edit-controls {
  display: flex;
  gap: 20rpx;
  margin-top: 10rpx;
}

.edit-btn, .save-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  background: rgba(37, 117, 252, 0.1);
  color: #2575fc;
  border: 1px solid rgba(37, 117, 252, 0.2);
  line-height: 1.4;
}

.save-btn {
  background: #2575fc;
  color: #fff;
}

.edit-textarea {
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  line-height: 1.6;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #2575fc;
  border-radius: 8rpx;
  background: #fff;
  margin-bottom: 16rpx;
  color: #333;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .edit-btn {
    background: rgba(134, 168, 231, 0.15);
    color: #86a8e7;
    border-color: rgba(134, 168, 231, 0.3);
  }
  
  .save-btn {
    background: #86a8e7;
    color: #fff;
  }
  
  .edit-textarea {
    background: #2a2a2a;
    border-color: #86a8e7;
    color: #fff;
  }
}

/* 更新编辑相关样式 */
.edit-wrapper {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
}

/* 添加遮罩层 */
.edit-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.edit-textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #2575fc;
  border-radius: 8rpx;
  background: #fff;
  margin-bottom: 16rpx;
  color: #333;
}

.edit-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding-top: 10rpx;
}

.cancel-btn, .save-btn {
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  transition: all 0.3s ease;
}

.cancel-btn {
  color: #666;
  background: #f5f5f5;
}

.save-btn {
  color: #fff;
  background: #2575fc;
}

.cancel-btn:active, .save-btn:active {
  opacity: 0.8;
}

.text-container {
  position: relative;
  padding: 16rpx 80rpx 16rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.editable {
  cursor: pointer;
}

.editable:active {
  background: rgba(37, 117, 252, 0.05);
}

.edit-hint {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  opacity: 0;
  transition: opacity 0.3s;
}

.edit-icon {
  font-size: 32rpx;
  color: #2575fc;
  padding: 8rpx;
}

.editable:hover .edit-hint {
  opacity: 1;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .edit-wrapper {
    background: #2a2a2a;
  }
  
  .edit-textarea {
    background: #2a2a2a;
    border-color: #86a8e7;
    color: #fff;
  }
  
  .cancel-btn {
    background: #333;
    color: #999;
  }
  
  .save-btn {
    background: #86a8e7;
  }
  
  .text-container {
    background: rgba(0, 0, 0, 0.2);
  }
  
  .editable:active {
    background: rgba(134, 168, 231, 0.15);
  }
  
  .edit-icon {
    color: #86a8e7;
  }
}

/* 移除所有旧的编辑按钮样式 */
.edit-controls,
.edit-btn,
.header-right {
  display: none !important;
}

/* 添加富文本样式 */
.rich-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

@media (prefers-color-scheme: dark) {
  .rich-content {
    color: #fff;
  }
}

/* 确保文本容器在编辑时隐藏 */
.text-container.editing {
  visibility: hidden;
}

/* 添加删除按钮相关样式 */
.edit-actions-container {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  gap: 16rpx;
  opacity: 0;
  transition: opacity 0.3s;
}

.delete-hint {
  cursor: pointer;
}

.delete-icon {
  font-size: 32rpx;
  color: #ff4d4f;
  padding: 8rpx;
}

.editable:hover .edit-actions-container {
  opacity: 1;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .delete-icon {
    color: #ff7875;
  }
}

/* 更新删除按钮样式 */
.item-header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 0;
  width: 100%;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  z-index: 1;
}

.delete-btn {
  padding: 4rpx;
  border-radius: 50%;
  background: rgba(255, 77, 79, 0.1);
  transition: all 0.3s ease;
  cursor: pointer;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
}

.delete-btn:active {
  background: rgba(255, 77, 79, 0.2);
}

.delete-icon {
  font-size: 24rpx;
  color: #ff4d4f;
  line-height: 1;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .delete-btn {
    background: rgba(255, 77, 79, 0.2);
  }
  
  .delete-icon {
    color: #ff7875;
  }
}

/* 移除旧的删除按钮样式 */
.edit-actions-container,
.delete-hint {
  display: none !important;
}

/* 添加新增按钮样式 */
.add-btn {
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(37, 117, 252, 0.1);
  transition: all 0.3s ease;
  cursor: pointer;
}

.add-btn:active {
  background: rgba(37, 117, 252, 0.2);
}

.add-icon {
  font-size: 32rpx;
  color: #2575fc;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .add-btn {
    background: rgba(134, 168, 231, 0.15);
  }
  
  .add-icon {
    color: #86a8e7;
  }
}

/* 添加卡片悬停效果 */
.card {
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.08);
}

/* 添加渐变边框效果 */
.recommendation-category::before {
  content: '';
  position: absolute;
  top: -1px;
  left: -1px;
  right: -1px;
  bottom: -1px;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #7F7FD5, #91EAE4);
  z-index: -1;
  opacity: 0.1;
}
