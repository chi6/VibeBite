/**index.wxss**/
page {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  margin: 0;
  padding: 0;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  background-color: #f8f9fa;
}

.status-section {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #e0f7fa;
  width: 100%;
}

.ai-status {
  padding: 30rpx;
  background: linear-gradient(135deg, #e0f7fa 0%, #ffffff 100%);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-title {
  font-size: 36rpx;
  color: #00796b;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.status-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.status-item {
  font-size: 30rpx;
  color: #004d40;
  font-weight: bold;
  background-color: #ffffff;
  padding: 10rpx 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin: 5rpx 0;
  width: 90%;
  text-align: center;
}

.ai-animation {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
  animation: bounce 2s infinite;
}

.chat-section {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #e0f7fa;
  width: 100%;
}

.chat-btn {
  display: flex;
  align-items: center;
  padding: 100rpx 20rpx;
  background: linear-gradient(135deg, #00796b 0%, #004d40 100%);
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 77, 64, 0.2);
}

.ai-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.btn-text {
  flex: 1;
  text-align: left;
}

.btn-title {
  display: block;
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.btn-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-30px);
  }
  60% {
    transform: translateY(-15px);
  }
}
