/**index.wxss**/
page {
  background: #f5f7fa;
}

.container {
  min-height: 100vh;
  padding: 30rpx 0;
}

.main-content {
  padding: 0 30rpx;
}

/* AI状态卡片 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.ai-status-card {
  background: linear-gradient(145deg, #7F7FD5, #86A8E7, #91EAE4);
}

.ai-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.ai-animation {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  background: rgba(255, 255, 255, 0.1);
  padding: 4rpx;
}

.ai-title {
  flex: 1;
}

.ai-title .title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  display: block;
  margin-bottom: 8rpx;
}

.ai-title .subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.status-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.status-tag {
  font-size: 24rpx;
  color: #fff;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

.ai-thought {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.6;
}

/* 餐饮喜好卡片 */
.preferences-card {
  background: linear-gradient(135deg, #fff5f5, #fff);
}

.card-header {
  margin-bottom: 20rpx;
}

.card-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.preferences-content {
  padding: 0;
  background: transparent;
}

.pref-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.pref-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pref-text {
  flex: 1;
}

.pref-label {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 4rpx;
}

.pref-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.pref-recommend {
  margin-top: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 20rpx;
}

.recommend-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.recommend-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.recommend-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.recommend-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 对话按钮 */
.chat-btn {
  width: 100% !important;
  padding: 0;
  border: none;
  margin-top: 20rpx;
}

.gradient-bg {
  background: linear-gradient(135deg, #6a11cb, #2575fc);
  border-radius: 24rpx;
  overflow: hidden;
}

.chat-btn-content {
  display: flex;
  align-items: center;
  padding: 30rpx;
  gap: 20rpx;
}

.ai-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 10rpx;
}

.btn-text {
  flex: 1;
  text-align: left;
}

.btn-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.btn-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}

/* 动画效果 */
.chat-btn {
  transition: transform 0.2s ease;
}

.chat-btn:active {
  transform: scale(0.98);
}

/* 适配暗黑模式 */
@media (prefers-color-scheme: dark) {
  page {
    background: #1a1a1a;
  }
  
  .card {
    background: #2a2a2a;
  }
  
  .card-title {
    color: #fff;
  }
  
  .preferences-card {
    background: linear-gradient(135deg, #2a2a2a, #333);
  }
  
  .preferences-content {
    background: rgba(0, 0, 0, 0.2);
  }
  
  .preferences-summary {
    color: #ccc;
  }
  
  .ai-thought {
    color: #999;
  }
  
  .pref-item, .pref-recommend {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .pref-label {
    color: #999;
  }
  
  .pref-value, .recommend-title {
    color: #fff;
  }
  
  .recommend-content {
    color: #ccc;
  }
  
  .pref-icon {
    background: rgba(255, 255, 255, 0.15);
  }
}

/* 在现有样式基础上添加或更新以下样式 */
.features-section, .recommendations-section {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  background: rgba(255, 255, 255, 0.9);
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.features-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.recommendations-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recommendation-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.recommendation-number {
  background: #7F7FD5;
  color: #fff;
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  flex-shrink: 0;
}

.recommendation-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  flex: 1;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .features-section, .recommendations-section {
    background: rgba(255, 255, 255, 0.1);
  }

  .section-title {
    color: #fff;
  }

  .features-text, .recommendation-text {
    color: #ccc;
  }

  .section-icon {
    background: rgba(255, 255, 255, 0.15);
  }
}

/* 更新推荐卡片相关样式 */
.recommendation-category {
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.7));
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.category-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.06);
}

.category-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  background: linear-gradient(135deg, #fff, rgba(255, 255, 255, 0.9));
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 1px solid rgba(255, 255, 255, 0.8);
}

.category-title {
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.recommendation-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommendation-item {
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.5);
  transition: transform 0.2s ease;
}

.recommendation-item:active {
  transform: scale(0.98);
}

.item-header {
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.item-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rich-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.highlight {
  color: #2575fc;
  font-weight: 500;
  padding: 0 4rpx;
}

.highlight-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 12rpx;
}

.highlight-tag {
  font-size: 24rpx;
  color: #2575fc;
  background: rgba(37, 117, 252, 0.08);
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(37, 117, 252, 0.2);
  box-shadow: 0 2rpx 4rpx rgba(37, 117, 252, 0.1);
}

/* 暗黑模式适配优化 */
@media (prefers-color-scheme: dark) {
  .recommendation-category {
    background: linear-gradient(145deg, rgba(40, 40, 40, 0.9), rgba(30, 30, 30, 0.7));
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  .recommendation-item {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .category-icon {
    background: linear-gradient(135deg, rgba(60, 60, 60, 0.9), rgba(50, 50, 50, 0.9));
    border-color: rgba(255, 255, 255, 0.2);
  }

  .category-title, .item-title {
    color: #fff;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  .rich-content {
    color: rgba(255, 255, 255, 0.8);
  }

  .highlight {
    color: #86a8e7;
  }
  
  .highlight-tag {
    color: #86a8e7;
    background: rgba(134, 168, 231, 0.15);
    border-color: rgba(134, 168, 231, 0.3);
  }

  .category-header {
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
}

/* 添加滚动阴影效果 */
.preferences-content {
  position: relative;
  overflow: hidden;
}

.preferences-content::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  background: linear-gradient(to top, rgba(245, 247, 250, 1), rgba(245, 247, 250, 0));
  pointer-events: none;
}

@media (prefers-color-scheme: dark) {
  .preferences-content::after {
    background: linear-gradient(to top, rgba(26, 26, 26, 1), rgba(26, 26, 26, 0));
  }
}
