/**index.wxss**/
page {
  background: #f5f7fa;
}

.container {
  min-height: 100vh;
  padding: 30rpx 0;
}

.main-content {
  padding: 0 30rpx;
}

/* AI状态卡片 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.ai-status-card {
  background: linear-gradient(145deg, #7F7FD5, #86A8E7, #91EAE4);
}

.ai-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.ai-animation {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  background: rgba(255, 255, 255, 0.1);
  padding: 4rpx;
}

.ai-title {
  flex: 1;
}

.ai-title .title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  display: block;
  margin-bottom: 8rpx;
}

.ai-title .subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.status-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.status-tag {
  font-size: 24rpx;
  color: #fff;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

.ai-thought {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.6;
}

/* 餐饮喜好卡片 */
.preferences-card {
  background: linear-gradient(135deg, #fff5f5, #fff);
}

.card-header {
  margin-bottom: 20rpx;
}

.card-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.preferences-content {
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
}

.preferences-summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 对话按钮 */
.chat-btn {
  width: 100% !important;
  padding: 0;
  border: none;
  margin-top: 20rpx;
}

.gradient-bg {
  background: linear-gradient(135deg, #6a11cb, #2575fc);
  border-radius: 24rpx;
  overflow: hidden;
}

.chat-btn-content {
  display: flex;
  align-items: center;
  padding: 30rpx;
  gap: 20rpx;
}

.ai-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 10rpx;
}

.btn-text {
  flex: 1;
  text-align: left;
}

.btn-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.btn-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}

/* 动画效果 */
.chat-btn {
  transition: transform 0.2s ease;
}

.chat-btn:active {
  transform: scale(0.98);
}

/* 适配暗黑模式 */
@media (prefers-color-scheme: dark) {
  page {
    background: #1a1a1a;
  }
  
  .card {
    background: #2a2a2a;
  }
  
  .card-title {
    color: #fff;
  }
  
  .preferences-card {
    background: linear-gradient(135deg, #2a2a2a, #333);
  }
  
  .preferences-content {
    background: rgba(0, 0, 0, 0.2);
  }
  
  .preferences-summary {
    color: #ccc;
  }
  
  .ai-thought {
    color: #999;
  }
}
