/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f9fa;
}

.header {
  background-color: #ffffff;
  padding: 60rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.title {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  font-weight: bold;
}

.vibe { color: #1890ff; }
.bite { color: #52c41a; }

.content {
  flex: 1;
  padding: 40rpx;
}

.status-cards {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.status-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.status-card:active {
  transform: scale(0.98);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.card-title {
  font-size: 28rpx;
  color: #666666;
}

.card-content {
  padding-left: 56rpx;
}

.status-value {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.status-value.unset {
  color: #999999;
  font-size: 32rpx;
}

.status-desc {
  font-size: 24rpx;
  color: #999999;
}

.mood-card {
  background: linear-gradient(135deg, #ffffff 0%, #f0f7ff 100%);
  border-left: 8rpx solid #1890ff;
}

.mode-card {
  background: linear-gradient(135deg, #ffffff 0%, #f6ffed 100%);
  border-left: 8rpx solid #52c41a;
}

.chat-section {
  margin-top: 40rpx;
}

.chat-btn {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #1890ff 0%, #52c41a 100%);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.2);
}

.ai-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.btn-text {
  flex: 1;
  text-align: left;
}

.btn-title {
  display: block;
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.btn-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.mood-input, .mode-input {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.98);
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  opacity: 0;
  transform: translateY(100%);
  transition: all 0.3s ease;
  z-index: 1;
}

.mood-input.show, .mode-input.show {
  opacity: 1;
  transform: translateY(0);
}
