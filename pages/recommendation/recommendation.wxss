.container {
  padding: 40rpx;
}

.mood-info {
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.restaurant-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  margin-bottom: 40rpx;
}

.restaurant-image {
  width: 100%;
  height: 400rpx;
}

.restaurant-info {
  padding: 20rpx;
}

.restaurant-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.restaurant-rating, .restaurant-distance {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 5rpx;
}

.recommendation-reason {
  padding: 20rpx;
  background-color: #f0f0f0;
  font-size: 28rpx;
  color: #333333;
}

.action-btn {
  width: 100%;
  margin-bottom: 20rpx;
  background-color: #07c160;
  color: #ffffff;
}
