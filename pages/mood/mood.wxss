.container {
  padding: 40rpx;
}

.title {
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.mood-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.mood-item {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.mood-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.mood-text {
  font-size: 28rpx;
}

.selected-mood {
  text-align: center;
  margin: 30rpx 0;
  font-size: 32rpx;
  color: #07c160;
}

.confirm-btn {
  width: 80%;
  background-color: #07c160;
  color: #ffffff;
  margin-top: 40rpx;
}

.confirm-btn[disabled] {
  background-color: #999999;
  color: #ffffff;
}
