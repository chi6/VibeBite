page {
  background: linear-gradient(145deg, #f0f5ff, #e6f0ff);
  min-height: 100vh;
}

.container {
  padding: 40rpx 20rpx;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.pets-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  padding: 20rpx;
}

.pet-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pet-card.selected {
  transform: scale(1.02);
  box-shadow: 0 12rpx 32rpx rgba(74,144,226,0.2);
  border: 3rpx solid #4a90e2;
}

.pet-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
}

.pet-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: center;
}

.pet-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.pet-description {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.diet-tags {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 12rpx;
  margin-top: 12rpx;
}

.diet-tag, .personality-tag {
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
}

.diet-tag {
  background: #e6f0ff;
  color: #4a90e2;
}

.personality-tag {
  background: #fff0e6;
  color: #ff9500;
}

.food-recommendations {
  margin-top: 24rpx;
}

.recommend-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.food-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.food-tag {
  padding: 6rpx 16rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.save-btn {
  margin-top: 40rpx;
  width: 90% !important;
  background: linear-gradient(135deg, #4a90e2, #2171c1);
  color: #fff;
  border-radius: 40rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

/* 添加自定义宠物按钮 */
.add-pet-btn {
  margin: 20rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #4a90e2;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.btn-icon {
  font-size: 36rpx;
  font-weight: bold;
}

/* 自定义宠物弹窗 */
.custom-pet-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 999;
  display: none;
}

.custom-pet-modal.show {
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 90%;
  max-height: 90vh;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.modal-footer {
  padding: 20rpx;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  border-top: 1rpx solid #eee;
}

.cancel-btn, .confirm-btn {
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #4a90e2;
  color: #fff;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .pet-card {
    background: #2a2a2a;
  }
  
  .pet-name {
    color: #fff;
  }
  
  .pet-description {
    color: #999;
  }
  
  .title {
    color: #fff;
  }
  
  .subtitle {
    color: #999;
  }
  
  .modal-content {
    background: #2a2a2a;
  }
  
  .form-input, .form-textarea {
    background: #333;
    border-color: #444;
    color: #fff;
  }
  
  .modal-header {
    border-bottom-color: #444;
  }
  
  .modal-footer {
    border-top-color: #444;
  }
}

.pet-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 999;
  display: none;
}

.pet-detail-modal.show {
  display: flex;
  align-items: center;
  justify-content: center;
}

.pet-detail-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.detail-image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(74,144,226,0.1);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
}

.detail-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
}

.detail-value {
  font-size: 30rpx;
  color: #333;
}

.detail-value.description {
  font-size: 28rpx;
  line-height: 1.5;
}

.detail-food-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 8rpx;
}

.detail-food-tag {
  padding: 8rpx 20rpx;
  background: #e6f0ff;
  color: #4a90e2;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .detail-label {
    color: #999;
  }
  
  .detail-value {
    color: #fff;
  }
  
  .detail-food-tag {
    background: #334155;
  }
} 