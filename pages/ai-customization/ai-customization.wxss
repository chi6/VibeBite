page {
  background: linear-gradient(145deg, #f0f5ff, #e6f0ff);
  min-height: 100vh;
}

.container {
  padding: 40rpx 20rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* AI头像部分 */
.ai-avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  position: relative;
}

.avatar-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 12rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 20rpx 40rpx rgba(74, 144, 226, 0.2);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  background: #fff;
}

.customizing .avatar-img {
  transform: scale(0.95) rotate(-5deg);
  box-shadow: 0 10rpx 25rpx rgba(74, 144, 226, 0.25);
}

.avatar-hint {
  margin-top: 30rpx;
  padding: 12rpx 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(74, 144, 226, 0.1);
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #4a90e2;
  font-weight: 500;
}

.hint-emoji {
  font-size: 28rpx;
  animation: sparkle 2s infinite;
}

/* 表单部分 */
.settings-form {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border-radius: 32rpx;
  padding: 40rpx 20rpx;
  box-shadow: 0 20rpx 40rpx rgba(74, 144, 226, 0.08);
  display: flex;
  flex-direction: column;
  gap: 35rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.label-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-left: 8rpx;
  margin-bottom: 8rpx;
}

.label-icon {
  font-size: 36rpx;
  background: linear-gradient(135deg, #4a90e2, #2171c1);
  -webkit-background-clip: text;
  color: transparent;
}

.label {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.input, .picker, .textarea {
  background: rgba(255, 255, 255, 0.95);
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  color: #333;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: inset 0 2rpx 5rpx rgba(74, 144, 226, 0.08),
              0 2rpx 10rpx rgba(74, 144, 226, 0.05);
  width: 100%;
  box-sizing: border-box;
  min-height: 88rpx;
}

.input {
  width: 100%;
  padding-right: 40rpx;
}

.picker {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 88rpx;
  position: relative;
  padding-right: 60rpx;
}

.picker-value {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.picker-arrow {
  color: #4a90e2;
  font-size: 24rpx;
  transition: transform 0.3s ease;
}

.picker:active .picker-arrow {
  transform: translateX(6rpx);
}

.textarea {
  height: 180rpx;
  line-height: 1.6;
}

/* 保存按钮 */
.save-btn {
  margin: 20rpx auto;
  width: 90% !important;
  background: linear-gradient(135deg, #4a90e2, #2171c1);
  border: none;
  padding: 32rpx;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 15rpx 30rpx rgba(74, 144, 226, 0.2);
  position: relative;
  overflow: hidden;
}

.save-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}

.save-btn:active {
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.15);
}

.save-btn:active::before {
  transform: translateX(100%);
}

.btn-text {
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.btn-emoji {
  font-size: 34rpx;
}

/* 动画效果 */
@keyframes sparkle {
  0%, 100% { 
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }
  50% { 
    opacity: 0.7;
    transform: scale(1.1) rotate(5deg);
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  page {
    background: linear-gradient(145deg, #1a2433, #2a3444);
  }
  
  .settings-form {
    background: rgba(45, 55, 72, 0.8);
  }
  
  .input, .picker, .textarea {
    background: rgba(52, 63, 82, 0.9);
    color: #fff;
  }
  
  .input:focus, .picker:active, .textarea:focus {
    background: rgba(61, 73, 94, 0.95);
  }
  
  .label {
    color: #fff;
  }
  
  .picker-value {
    color: #fff;
  }
  
  .avatar-hint {
    background: rgba(45, 55, 72, 0.9);
  }
  
  .hint-text {
    color: #60a5fa;
  }
  
  .label-icon {
    background: linear-gradient(135deg, #60a5fa, #3b82f6);
    -webkit-background-clip: text;
  }
} 