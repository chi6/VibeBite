.container {
  padding: 30rpx;
  background: #f8f8f8;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.form-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 40rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.radio-item, .checkbox-item {
  display: block;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
}

.input-box {
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.custom-description {
  background: #f0f7ff;
  padding: 20rpx;
  border-radius: 12rpx;
}

.description-input {
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.keywords-container {
  margin-top: 20rpx;
}

.keywords-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.keywords-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.keyword-tag {
  background: #e8f4ff;
  color: #0066cc;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.submit-btn {
  width: 90%;
  margin: 40rpx auto;
  background: #0066cc;
  color: #fff;
  border-radius: 8rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn:active {
  background: #005bb9;
} 