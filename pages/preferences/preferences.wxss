page {
  background: #f5f6f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  align-items: center;
  min-height: 100%;
  box-sizing: border-box;
}

/* Notebook 通用样式 */
.notebook-section {
  width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
  position: relative;
  margin: 0 auto;
  box-sizing: border-box;
}

.notebook-section::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 4rpx;
  height: 100%;
  background: #e8eaf1;
  border-radius: 4rpx;
}

/* AI 助手区域 */
.ai-section {
  background: #f8f9ff;
  border: 1px solid #e8eaf1;
}

.paper-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.ai-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid #e8eaf1;
  background: #ffffff;
}

.ai-info {
  flex: 1;
}

.ai-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.mood-tags {
  display: flex;
  gap: 12rpx;
}

.mood-tag {
  font-size: 22rpx;
  color: #666;
  background: #ffffff;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  border: 1px solid #e8eaf1;
}

.thought-bubble {
  background: #ffffff;
  padding: 20rpx;
  border-radius: 16rpx;
  border: 1px solid #e8eaf1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  position: relative;
}

.thought-bubble::before {
  content: '';
  position: absolute;
  top: -12rpx;
  left: 40rpx;
  width: 20rpx;
  height: 20rpx;
  background: #ffffff;
  border-left: 1px solid #e8eaf1;
  border-top: 1px solid #e8eaf1;
  transform: rotate(45deg);
}

/* 主要内容区域 */
.main-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 60vh; /* 设置最小高度 */
}

.paper-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px dashed #e8eaf1;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.date-text {
  font-size: 22rpx;
  color: #999;
}

.paper-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 240rpx; /* 增加最小高度 */
  margin-bottom: 40rpx; /* 增加底部间距 */
}

.note-input {
  flex: 1;
  width: 100%;
  min-height: 160rpx;
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  background: transparent;
  padding: 0;
}

/* 灵感区域 */
.inspiration-section {
  border-top: 1px dashed #e8eaf1;
  padding-top: 24rpx;
}

.section-tabs {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.tab {
  font-size: 28rpx;
  color: #666;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  background: #f5f6f8;
  transition: all 0.3s ease;
}

.tab.active {
  color: #4a90e2;
  background: #e8f0fe;
  font-weight: 500;
}

.ideas-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.idea-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.idea-item:active {
  background: #e8f0fe;
}

.idea-icon {
  font-size: 32rpx;
}

.idea-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.delete-btn {
  color: #999;
  font-size: 24rpx;
  padding: 8rpx;
}

/* 提交按钮 */
.action-button {
  width: 600rpx;
  padding: 24rpx 0;
  margin: 0 auto;
}

.submit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 88rpx;
  background: #4a90e2;
  color: #ffffff;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.2);
}

.btn-icon {
  font-size: 32rpx;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  page {
    background: #1a1a1a;
  }

  .notebook-section {
    background: #2a2a2a;
    border-color: #333;
  }

  .notebook-section::before {
    background: #333;
  }

  .ai-section {
    background: #2a2a2a;
  }

  .thought-bubble,
  .mood-tag {
    background: #333;
    border-color: #444;
  }

  .thought-bubble::before {
    background: #333;
    border-color: #444;
  }

  .paper-title {
    border-color: #333;
  }

  .title-text {
    color: #fff;
  }

  .note-input {
    color: #fff;
  }

  .tab {
    background: #333;
    color: #999;
  }

  .tab.active {
    background: #4a90e2;
    color: #fff;
  }

  .idea-item {
    background: #333;
  }

  .idea-text {
    color: #fff;
  }
}

.tags-container {
  padding: 20rpx 0; /* 修改内边距 */
  background-color: transparent;
  margin-top: auto; /* 将容器推到底部 */
  border-top: 1px dashed #e8eaf1; /* 添加上边框分隔线 */
}

.buttons-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  padding: 0 10rpx;
}

.tag {
  flex: 1.2;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 20px;
  font-size: 26rpx;
  gap: 4px;
}

.submit-btn {
  flex: 0.8;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  background-color: #FF6B6B;
  color: white;
  border-radius: 20px;
  font-size: 26rpx;
  gap: 4px;
  height: auto;
  line-height: 1.2;
  margin: 0;
  min-width: 120rpx;
}

.tag-icon, .btn-icon {
  font-size: 16px;
}

.tag.active {
  background-color: #FFE4E4;
  color: #FF6B6B;
}

.records-container {
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease;
  opacity: 0;
}

.records-container.show {
  max-height: none; /* 移除最大高度限制 */
  flex: 1;
  opacity: 1;
  margin-top: 20rpx;
  overflow-y: auto; /* 内容过多时可滚动 */
}

.records-list {
  display: none;
  flex-direction: column;
  gap: 16rpx;
}

.records-list.show {
  display: flex;
  animation: slideDown 0.3s ease;
}

.record-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.record-text {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

.suggestion-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .tag {
    background: #333;
    color: #999;
  }

  .tag.active {
    background: #4a90e2;
    color: #fff;
  }

  .record-item {
    background: #333;
  }

  .record-text {
    color: #fff;
  }

  .tags-container {
    border-top-color: #333;
  }
}

/* 适配小屏幕 */
@media screen and (max-width: 700rpx) {
  .notebook-section {
    width: 85vw;
  }

  .action-button {
    width: 85vw;
  }
} 