page {
  background: linear-gradient(145deg, #f6f8ff, #f0f3ff);
  min-height: 100vh;
}

.container {
  padding: 40rpx 30rpx;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 40rpx 0;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #8e2de2, #4a00e0);
  -webkit-background-clip: text;
  color: transparent;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 表单部分 */
.form-section {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.06);
}

.form-item {
  margin-bottom: 50rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
}

.item-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.item-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(to bottom, #8e2de2, #4a00e0);
  border-radius: 4rpx;
}

/* 单选和多选样式 */
.radio-group, .checkbox-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.radio-item, .checkbox-item {
  position: relative;
  padding: 24rpx 30rpx;
  background: #f8f9fd;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.radio-item:active, .checkbox-item:active {
  transform: translateY(-2rpx);
  background: #f0f2f8;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 输入框样式 */
.input-box {
  width: 100%;
  padding: 24rpx 30rpx;
  background: #f8f9fd;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s ease;
}

.input-box:focus {
  background: #fff;
  box-shadow: 0 0 0 3rpx rgba(106, 17, 203, 0.1);
  transform: translateY(-2rpx);
}

/* 自定义描述区域 */
.custom-description {
  margin-top: 40rpx;
  background: linear-gradient(145deg, #f0f3ff, #fff);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
}

.description-input {
  width: 100%;
  height: 180rpx;
  padding: 24rpx 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
  box-shadow: inset 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
}

/* 关键词展示 */
.keywords-container {
  margin-top: 24rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
}

.keywords-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.keywords-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.keyword-tag {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #8e2de2, #4a00e0);
  color: #fff;
  border-radius: 100rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(106, 17, 203, 0.2);
  transition: all 0.3s ease;
}

.keyword-tag:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(106, 17, 203, 0.15);
}

/* 提交按钮 */
.submit-btn {
  margin: 60rpx auto;
  width: 90% !important;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #8e2de2, #4a00e0);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  text-align: center;
  box-shadow: 0 8rpx 25rpx rgba(106, 17, 203, 0.25);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.submit-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  transition: 0.5s;
}

.submit-btn:active {
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(106, 17, 203, 0.2);
}

.submit-btn:active::after {
  left: 100%;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  page {
    background: linear-gradient(145deg, #1a1a1a, #2a2a2a);
  }
  
  .form-section {
    background: rgba(45, 45, 45, 0.8);
  }
  
  .form-item {
    background: #2a2a2a;
  }
  
  .item-title {
    color: #fff;
  }
  
  .radio-item, .checkbox-item, .input-box {
    background: #333;
    color: #fff;
  }
  
  .radio-item:active, .checkbox-item:active {
    background: #404040;
  }
  
  .custom-description {
    background: linear-gradient(145deg, #2a2a2a, #333);
  }
  
  .description-input {
    background: rgba(60, 60, 60, 0.9);
    color: #fff;
  }
  
  .keywords-container {
    background: rgba(45, 45, 45, 0.5);
  }
  
  .keywords-title {
    color: #999;
  }
  
  .keyword-tag {
    background: linear-gradient(135deg, #9333ea, #6b21a8);
  }
} 