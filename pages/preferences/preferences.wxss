page {
  background: linear-gradient(145deg, #f6f8ff, #f0f3ff);
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
}

.title {
  font-size: 72rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #4a90e2, #2171c1);
  -webkit-background-clip: text;
  color: transparent;
  margin-bottom: 20rpx;
  letter-spacing: 6rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
  line-height: 1.4;
}

.form-section {
  margin-bottom: 24rpx;
}

.input-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(20px);
}

.input-card:hover {
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.main-input {
  height: 160rpx;
  font-size: 32rpx;
  line-height: 1.8;
  color: #333;
  padding: 20rpx;
  border-radius: 16rpx;
  background: transparent;
  box-sizing: border-box;
}

.main-input::placeholder {
  color: #999;
  font-size: 30rpx;
}

.button-container {
  width: 100%;
  padding: 0;
  margin: 0 0 20rpx 0;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4a90e2, #2171c1);
  color: #ffffff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  letter-spacing: 2rpx;
}

.submit-btn:active {
  opacity: 0.9;
}

.records-section {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.column {
  flex: 1;
  min-width: 0;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 24rpx;
  padding: 20rpx;
  backdrop-filter: blur(20px);
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.column-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
  padding-left: 10rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.record-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  position: relative;
  transition: all 0.3s ease;
  min-height: 72rpx;
}

.record-item.zoom-in {
  transform: scale(0.95);
  transition: all 0.2s ease-in;
}

.record-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-right: 50rpx;
}

.record-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff3b30;
  font-size: 32rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.suggestion {
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
}

.suggestion-icon {
  font-size: 32rpx;
  line-height: 1.4;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  page {
    background: linear-gradient(145deg, #1a1a1a, #2a2a2a);
  }
  
  .column {
    background: rgba(45, 45, 45, 0.6);
  }
  
  .record-item {
    background: rgba(28, 28, 30, 0.9);
    border: 1rpx solid rgba(255, 255, 255, 0.08);
  }
  
  .input-card {
    background: rgba(45, 45, 45, 0.95);
  }
  
  .submit-btn {
    box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.15);
  }
} 