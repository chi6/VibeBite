page {
  background: linear-gradient(145deg, #f6f8ff, #f0f3ff);
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
}

.header {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 40rpx;
  margin-top: -15vh;
}

.title {
  font-size: 72rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #8e2de2, #4a00e0);
  -webkit-background-clip: text;
  color: transparent;
  margin-bottom: 40rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
}

.form-section {
  width: 100%;
  margin-bottom: 40rpx;
}

.input-card {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20px);
  transition: all 0.3s ease;
}

.input-card:hover {
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.main-input {
  width: 100%;
  height: 200rpx;
  font-size: 32rpx;
  line-height: 1.8;
  color: #333;
  padding: 30rpx;
  border-radius: 16rpx;
  background: transparent;
  box-sizing: border-box;
}

.main-input::placeholder {
  color: #999;
  font-size: 30rpx;
}

.button-container {
  width: 100%;
  padding: 0 30rpx;
  margin-top: 40rpx;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #4CAF50;  /* 可以根据您的主题色调整 */
  color: #ffffff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.submit-btn:active {
  opacity: 0.9;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  page {
    background: linear-gradient(145deg, #1a1a1a, #2a2a2a);
  }
  
  .input-card {
    background: rgba(45, 45, 45, 0.95);
  }
  
  .main-input {
    color: #fff;
  }
  
  .main-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .subtitle {
    color: rgba(255, 255, 255, 0.7);
  }
} 