.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  height: 100vh;
  background: #f8f9fd;
  position: relative;
  padding: 0;
  overflow: hidden;
}

/* AI互动区域样式优化 */
.ai-interaction {
  padding: 30rpx 40rpx;
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  height: 280rpx;
  box-sizing: border-box;
  width: 100%;
}

.ai-character-wrapper {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 180rpx;
  margin-bottom: 20rpx;
  padding: 0 40rpx;
}

.ai-animation {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  transition: transform 0.3s ease;
}

.ai-animation:active {
  transform: scale(0.95);
}

.ai-status {
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
  font-weight: 500;
  padding: 10rpx 30rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  backdrop-filter: blur(10px);
  width: fit-content;
  margin: 10rpx auto 0;
}

/* 聊天区域样式优化 */
.chat-container {
  flex: 1;
  padding: 30rpx;
  overflow: hidden;
  height: calc(100vh - 280rpx - 280rpx);
  margin-bottom: calc(env(safe-area-inset-bottom) + 100rpx);
}

.chat-list {
  height: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 200rpx;
}

.message {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
  animation: fadeIn 0.3s ease;
  padding: 0 10rpx;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 20rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar image {
  width: 100%;
  height: 100%;
}

.content-wrapper {
  max-width: 70%;
  position: relative;
  margin: 0 12rpx;
}

.content {
  padding: 24rpx 30rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-all;
  position: relative;
}

.message-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.user .content {
  background: linear-gradient(135deg, #6e8efb, #7b7fec);
  color: #fff;
  border-radius: 24rpx 24rpx 0 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(110, 142, 251, 0.2);
}

.ai .content {
  background: #fff;
  color: #333;
  border-radius: 24rpx 24rpx 24rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 浮动推荐窗口基础样式优化 */
.floating-recommendations {
  position: fixed;
  right: -100%;
  bottom: 120rpx;
  width: 680rpx;
  max-height: 85vh;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 40rpx 0 0 40rpx;
  box-shadow: -4rpx 0 30rpx rgba(110, 142, 251, 0.15);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 99;
  backdrop-filter: blur(20px);
  display: flex;
  flex-direction: column;
  overflow: hidden;
  border-left: 2rpx solid rgba(110, 142, 251, 0.1);
  transform: translateX(100%);
  right: 0;
  transition: transform 0.3s ease;
}

/* 优化显示动画 */
.floating-recommendations.show {
  transform: translateX(0);
  animation: none;
}

@keyframes slideInRight {
  0% { 
    right: -100%;
    opacity: 0;
  }
  100% { 
    right: 0;
    opacity: 1;
  }
}

/* 优化头部设计 */
.recommendations-header {
  padding: 36rpx 40rpx;
  background: linear-gradient(135deg, #6e8efb, #7b7fec);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

/* 删除之前的磨砂玻璃装饰效果 */
/* .recommendations-header::before { ... } */

.recommendations-title {
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 简化标题,删除文字阴影 */
.recommendations-title::before {
  content: '🌟';
  font-size: 36rpx;
}

/* 优化关闭按钮 */
.close-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transition: all 0.3s ease;
  backdrop-filter: blur(4px);
}

.close-btn:active {
  transform: scale(0.9) rotate(90deg);
  background: rgba(255, 255, 255, 0.3);
}

/* 优化内容区域滚动 */
.recommendations-content {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx 30rpx calc(30rpx + env(safe-area-inset-bottom));
  position: relative;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

/* 添加滚动渐变遮罩 */
.recommendations-content::before,
.recommendations-content::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  height: 60rpx;
  pointer-events: none;
  z-index: 1;
}

.recommendations-content::before {
  top: 0;
  background: linear-gradient(to bottom, 
    rgba(255, 255, 255, 0.95), 
    rgba(255, 255, 255, 0)
  );
}

.recommendations-content::after {
  bottom: 0;
  background: linear-gradient(to top, 
    rgba(255, 255, 255, 0.95), 
    rgba(255, 255, 255, 0)
  );
}

/* 优化链接卡片样式 */
.link-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2rpx solid rgba(110, 142, 251, 0.1);
}

.link-card:active {
  transform: translateX(20rpx);
  background: #f8f9fd;
  border-color: rgba(110, 142, 251, 0.2);
}

/* 优化链接内容样式 */
