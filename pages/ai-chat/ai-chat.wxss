.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f9fa;
}

.chat-container {
  flex: 1;
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
}

.chat-list {
  height: 100%;
  padding-bottom: 20rpx;
}

.message {
  display: flex;
  margin-bottom: 16rpx;
  padding: 0 10rpx;
}

.message.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 50rpx;
  height: 50rpx;
  margin: 0 10rpx;
  flex-shrink: 0;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.content {
  max-width: 70%;
  padding: 10rpx 16rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  line-height: 1.4;
}

.message.user .content {
  background-color: #1890ff;
  color: #fff;
}

.input-container {
  display: flex;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
}

.chat-input {
  flex: 1;
  height: 50rpx;
  padding: 0 12rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 25rpx;
  font-size: 28rpx;
  background-color: #f8f9fa;
}

.send-btn {
  width: 80rpx;
  height: 50rpx;
  margin-left: 10rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #1890ff;
  color: #fff;
  border-radius: 25rpx;
  font-size: 28rpx;
}
