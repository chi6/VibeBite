.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  height: 100vh;
  background: #f8f9fd;
  position: relative;
  padding: 0;
  overflow: hidden;
}

/* AI互动区域样式优化 */
.ai-interaction {
  padding: 30rpx 40rpx;
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  height: 280rpx;
  box-sizing: border-box;
  width: 100%;
}

.ai-character-wrapper {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 180rpx;
  margin-bottom: 20rpx;
  padding: 0 40rpx;
}

.ai-animation {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  transition: transform 0.3s ease;
}

.ai-animation:active {
  transform: scale(0.95);
}

.ai-status {
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
  font-weight: 500;
  padding: 10rpx 30rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  backdrop-filter: blur(10px);
  width: fit-content;
  margin: 10rpx auto 0;
}

/* 聊天区域样式优化 */
.chat-container {
  flex: 1;
  padding: 30rpx;
  overflow: hidden;
  height: calc(100vh - 280rpx - 180rpx);
  margin-bottom: calc(env(safe-area-inset-bottom) + 180rpx);
}

.chat-list {
  height: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 200rpx;
}

.message {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
  animation: fadeIn 0.3s ease;
  padding: 0 10rpx;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 20rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar image {
  width: 100%;
  height: 100%;
}

.content-wrapper {
  max-width: 70%;
  position: relative;
  margin: 0 12rpx;
}

.content {
  padding: 24rpx 30rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-all;
  position: relative;
}

.message-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.user .content {
  background: linear-gradient(135deg, #6e8efb, #7b7fec);
  color: #fff;
  border-radius: 24rpx 24rpx 0 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(110, 142, 251, 0.2);
}

.ai .content {
  background: #fff;
  color: #333;
  border-radius: 24rpx 24rpx 24rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 浮动推荐窗口基础样式优化 */
.floating-recommendations {
  position: fixed;
  left: 0;
  bottom: calc(180rpx + env(safe-area-inset-bottom));
  width: 680rpx;
  max-height: calc(85vh - 180rpx - env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.98);
  border-radius: 0 40rpx 40rpx 0;
  box-shadow: 4rpx 0 30rpx rgba(110, 142, 251, 0.2);
  z-index: 99;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  transform: translateX(-100%);
  transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  border-right: 2rpx solid rgba(110, 142, 251, 0.1);
}

.floating-recommendations.show {
  transform: translateX(0);
}

/* 遮罩层样式 */
.recommendations-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 98;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  backdrop-filter: blur(4px);
}

.recommendations-mask.show {
  opacity: 1;
  visibility: visible;
}

/* 窗口头部样式 */
.recommendations-header {
  padding: 32rpx 40rpx;
  background: linear-gradient(135deg, #6e8efb, #7b7fec);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.recommendations-title {
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.recommendations-title::before {
  content: '🎯';
  font-size: 36rpx;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.close-btn:active {
  transform: scale(0.9) rotate(90deg);
  background: rgba(255, 255, 255, 0.3);
}

/* 意图标签容器样式 */
.intents-container {
  padding: 20rpx 30rpx;
  background: rgba(110, 142, 251, 0.05);
  border-bottom: 2rpx solid rgba(110, 142, 251, 0.1);
}

.intent-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.intent-tag {
  font-size: 24rpx;
  color: #6e8efb;
  background: #fff;
  padding: 8rpx 20rpx;
  border-radius: 100rpx;
  border: 2rpx solid rgba(110, 142, 251, 0.2);
  transition: all 0.3s ease;
}

.intent-tag:active {
  transform: scale(0.95);
  background: #6e8efb;
  color: #fff;
}

/* 空状态样式 */
.empty-state {
  padding: 60rpx 40rpx;
  text-align: center;
  color: #999;
}

.empty-state-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-state-text {
  font-size: 28rpx;
  line-height: 1.6;
}

/* 滚动到顶部按钮 */
.scroll-to-top {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transform: scale(0);
  transition: all 0.3s ease;
  z-index: 100;
}

.scroll-to-top.show {
  transform: scale(1);
}

.scroll-to-top::before {
  content: '↑';
  color: #6e8efb;
  font-size: 40rpx;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .floating-recommendations {
    background: rgba(30, 30, 30, 0.98);
  }
  
  .recommendations-mask {
    background: rgba(0, 0, 0, 0.5);
  }
  
  .intent-tag {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
    color: #7b7fec;
  }
  
  .intent-tag:active {
    background: #7b7fec;
    color: #fff;
  }
  
  .empty-state {
    color: #666;
  }
  
  .scroll-to-top {
    background: rgba(255, 255, 255, 0.1);
  }
  
