  border-radius: 50%;
}

.trigger-recommendations:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(110, 142, 251, 0.2);
}

/* 修改推荐列表容器样式 */
.recommendation-group {
  margin-bottom: 30rpx;
  height: 620rpx; /* 约等于3个卡片的高度 */
  overflow-y: auto;
  position: relative;
  padding-right: 20rpx; /* 为滚动条预留空间 */
  -webkit-overflow-scrolling: touch;
}

/* 自定义滚动条样式 */
.recommendation-group::-webkit-scrollbar {
  width: 6rpx;
}

.recommendation-group::-webkit-scrollbar-track {
  background: rgba(110, 142, 251, 0.1);
  border-radius: 3rpx;
}

.recommendation-group::-webkit-scrollbar-thumb {
  background: rgba(110, 142, 251, 0.2);
  border-radius: 3rpx;
}

/* 添加渐变遮罩效果 */
.recommendation-group::after {
  content: '';
  position: absolute;
  left: 0;
  right: 20rpx; /* 与padding-right相同 */
  bottom: 0;
  height: 100rpx;
  background: linear-gradient(to top, 
    var(--gradient-start-color, rgba(255, 255, 255, 0.95)), 
    var(--gradient-end-color, rgba(255, 255, 255, 0))
  );
  pointer-events: none;
  z-index: 1;
  border-radius: 0 0 24rpx 24rpx;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .recommendation-group::after {
    --gradient-start-color: rgba(30, 30, 30, 0.95);
    --gradient-end-color: rgba(30, 30, 30, 0);
  }
  
  .recommendation-group::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
  }
  
  .recommendation-group::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
  }
}
