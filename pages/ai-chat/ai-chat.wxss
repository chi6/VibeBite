  flex: 1;
  margin-right: 24rpx;
}

.link-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.5;
}

.link-type {
  font-size: 24rpx;
  color: #6e8efb;
  margin-top: 12rpx;
  display: inline-block;
  padding: 4rpx 16rpx;
  background: rgba(110, 142, 251, 0.1);
  border-radius: 100rpx;
}

/* 优化箭头动画 */
.link-arrow {
  color: #6e8efb;
  font-size: 36rpx;
  transition: transform 0.3s ease;
  opacity: 0.7;
}

.link-card:active .link-arrow {
  transform: translateX(10rpx);
  opacity: 1;
}

/* 优化日期分组样式 */
.recommendation-date {
  padding: 24rpx 32rpx;
  margin: 30rpx 0 20rpx;
  background: rgba(110, 142, 251, 0.08);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  backdrop-filter: blur(4px);
}

.date-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.recommendation-count {
  font-size: 24rpx;
  color: #666;
  background: rgba(110, 142, 251, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 100rpx;
}

