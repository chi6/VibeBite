.container {
  min-height: 100vh;
  background: #f8f9fd;
}

/* 顶部区域 */
.login-header {
  padding: 120rpx 40rpx 80rpx;
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  border-radius: 0 0 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 40rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

.welcome {
  font-size: 44rpx;
  color: #fff;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 登录内容区域 */
.login-content {
  margin: -60rpx 40rpx 0;
  padding: 60rpx 40rpx;
  background: #fff;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.login-tips {
  text-align: center;
  margin-bottom: 60rpx;
}

.tips-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 16rpx;
}

.tips-desc {
  font-size: 26rpx;
  color: #999;
}

/* 登录按钮 */
.login-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wechat-login-btn {
  width: 100%;
  height: 88rpx;
  min-height: 88rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  white-space: nowrap;
  line-height: 88rpx;
  background: linear-gradient(135deg, #07c160, #0ab956);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.2);
  margin-bottom: 40rpx;
  border: none;
}

.wechat-login-btn:active {
  transform: scale(0.98);
}

.wechat-icon {
  width: 44rpx;
  height: 44rpx;
  min-width: 44rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

/* 隐私政策 */
.privacy-tips {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.privacy-link {
  color: #6e8efb;
  display: inline;
}

/* 添加动画效果 */
.login-content {
  animation: slideUp 0.4s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
