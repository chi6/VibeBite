.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f0f3f9 0%, #ffffff 50%, #f5f7ff 100%);
  position: relative;
  overflow: hidden;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.login-header {
  padding: 0 0 80rpx;
  padding-top: max(140rpx, env(safe-area-inset-top));
  background: linear-gradient(145deg, #4a90e2 0%, #7f69ff 100%);
  position: relative;
  width: 100vw;
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  flex: 0 0 auto;
  min-height: 45vh;
}

.login-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100%;
  background: 
    radial-gradient(circle at 85% 15%, rgba(255, 255, 255, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 15% 85%, rgba(255, 255, 255, 0.2) 0%, transparent 50%),
    radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  pointer-events: none;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin: 0 auto 40rpx;
  border-radius: 45rpx;
  background: rgba(255, 255, 255, 0.95);
  padding: 20rpx;
  position: relative;
  z-index: 1;
  box-shadow: 
    0 20rpx 40rpx rgba(0, 0, 0, 0.15),
    inset 0 -4rpx 8rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10px);
  transform: translateY(0);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.logo:active {
  transform: translateY(4rpx);
  box-shadow: 
    0 10rpx 20rpx rgba(0, 0, 0, 0.12),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.header-text {
  width: 100%;
  text-align: center;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.welcome {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.subtitle {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.95);
  display: block;
  letter-spacing: 1.5rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
  text-align: center;
}

.login-content {
  margin: -60rpx 40rpx 48rpx;
  padding: 70rpx 50rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 40rpx;
  box-shadow: 
    0 25rpx 50rpx rgba(0, 0, 0, 0.08),
    0 10rpx 20rpx rgba(0, 0, 0, 0.03);
  position: relative;
  z-index: 2;
  backdrop-filter: blur(25px);
  animation: slideUp 0.7s cubic-bezier(0.34, 1.56, 0.64, 1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 45vh;
  gap: 70rpx;
}

.login-tips {
  width: 100%;
  text-align: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.tips-title {
  font-size: 40rpx;
  background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
  -webkit-background-clip: text;
  color: transparent;
  font-weight: 600;
  display: block;
  margin-bottom: 16rpx;
  letter-spacing: 1.5rpx;
  text-align: center;
}

.tips-desc {
  font-size: 28rpx;
  color: #5d6d7e;
  letter-spacing: 1rpx;
  line-height: 1.5;
  text-align: center;
  display: block;
}

.wechat-login-btn {
  background: linear-gradient(135deg, #07c160 0%, #06ae56 100%);
  height: 110rpx;
  line-height: 110rpx;
  font-size: 34rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
  color: #fff;
  border: none;
  border-radius: 55rpx;
  box-shadow: 
    0 20rpx 40rpx rgba(7, 193, 96, 0.2),
    inset 0 -2rpx 6rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 45rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-login-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 200%;
  height: 100%;
  background: linear-gradient(
    90deg, 
    transparent 0%,
    rgba(255, 255, 255, 0.2) 50%,
    transparent 100%
  );
  animation: shine 3s infinite linear;
}

@keyframes shine {
  to {
    transform: translateX(100%);
  }
}

.wechat-login-btn text {
  text-align: center;
  display: inline-block;
  width: 100%;
}

.privacy-container {
  width: 100%;
  text-align: center;
  padding: 24rpx 20rpx;
  box-sizing: border-box;
}

.privacy-text, .privacy-link {
  display: inline-block;
  vertical-align: middle;
}

.privacy-link {
  background: linear-gradient(135deg, #4a90e2 0%, #7f69ff 100%);
  -webkit-background-clip: text;
  color: transparent;
  display: inline;
  margin-left: 8rpx;
  font-weight: 500;
  position: relative;
  padding-bottom: 4rpx;
}

.privacy-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background: linear-gradient(135deg, #4a90e2 0%, #7f69ff 100%);
  opacity: 0.6;
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.privacy-link:active::after {
  transform: scaleX(1);
}

@keyframes slideUp {
  0% {
    opacity: 0;
    transform: translateY(60rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.gradient-text {
  background-image: linear-gradient(45deg, #ffffff, #ffffff);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  font-weight: bold;
  text-shadow: 
    0 2rpx 8rpx rgba(124, 185, 245, 0.3),
    0 0 15rpx rgba(124, 185, 245, 0.2),
    0 0 30rpx rgba(165, 180, 255, 0.1);
  animation: glow 2s ease-in-out infinite alternate;
}

@keyframes glow {
  from {
    text-shadow: 
      0 2rpx 8rpx rgba(124, 185, 245, 0.3),
      0 0 15rpx rgba(124, 185, 245, 0.2),
      0 0 30rpx rgba(165, 180, 255, 0.1);
  }
  to {
    text-shadow: 
      0 2rpx 8rpx rgba(124, 185, 245, 0.4),
      0 0 20rpx rgba(124, 185, 245, 0.3),
      0 0 40rpx rgba(165, 180, 255, 0.2);
  }
}
