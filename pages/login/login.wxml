<view class="container">
  <view class="login-header">
    <image class="logo" src="/images/logo.png" mode="aspectFit"></image>
    <view class="header-text">
      <text class="welcome gradient-text">VibeBite</text>
      <text class="subtitle">你的 AI 搭子</text>
    </view>
  </view>

  <view class="login-content">
    <view class="login-tips">
      <text class="tips-title">微信快捷登录</text>
      <text class="tips-desc">授权后将获得完整的服务体验</text>
    </view>

    <view class="login-actions">
      <button 
        class="login-btn wechat-login-btn" 
        open-type="getUserInfo" 
        bindgetuserinfo="handleWechatLogin"
      >
        <text>微信一键登录</text>
      </button>
      
      <view class="privacy-container">
        <text class="privacy-text">登录即代表您同意</text>
        <text class="privacy-link" bindtap="showPrivacyPolicy">《用户协议和隐私政策》</text>
      </view>
    </view>
  </view>
</view>
