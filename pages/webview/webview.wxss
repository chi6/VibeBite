/* pages/webview/webview.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.nav-bar {
  background: #fff;
  padding: 10rpx 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx;
  width: fit-content;
}

.back-arrow {
  font-size: 36rpx;
  color: #333;
}

.back-text {
  font-size: 28rpx;
  color: #333;
}

web-view {
  flex: 1;
  margin-top: 88rpx;  /* 为导航栏留出空间 */
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .nav-bar {
    background: #2a2a2a;
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  
  .back-arrow,
  .back-text {
    color: #fff;
  }
}